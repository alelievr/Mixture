.PinnedView {
    border-color: rgb(188, 81, 0);
}

.SelectedNode {
    border-color: rgb(55, 194, 255);
}

#Foldout > Toggle {
    background-color: rgba(0, 0, 0, 0.2);
    width: 105%;
    height: 21px;
    font-size: 14px;
}

#Foldout > Toggle > VisualElement > #unity-checkmark {
